include ../Toolsets.hsl

local var toolset_name type string;

local var src type list;
local var inc type list;
local var cflags type list;
local var lib type list;
local var ldflags type list;
local var appname type string;

project camellia-192-cbc-c99-sample : toolset $toolset_name : $src, $inc, $cflags, $lib, $ldflags, $appname;

camellia-192-cbc-c99-sample.preloading() {
    $toolset_name = get_app_toolset();
}

camellia-192-cbc-c99-sample.prologue() {
    $src.clear();
    $inc.clear();
    $cflags.clear();
    $lib.clear();
    $ldflags.clear();
    $appname = "camellia-192-cbc-c99-sample";
    if (hefesto.sys.os_name() == "windows") {
        $appname = $appname + ".exe";
    }
    $src.add_item("camellia-192-cbc-c99-sample.c");
    $inc = hefesto.sys.get_option("includes");
    $cflags = hefesto.sys.get_option("cflags");
    $lib = hefesto.sys.get_option("libraries");
    $ldflags = hefesto.sys.get_option("ldflags");
}

camellia-192-cbc-c99-sample.epilogue() {
    if (hefesto.sys.last_forge_result() != 0) {
        hefesto.sys.echo("~~~ ERROR\n");
        hefesto.project.abort(1);
    }
}
